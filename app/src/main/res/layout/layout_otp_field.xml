<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/first_number"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/second_number"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toEndOf="@id/first_number"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/third_number"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toEndOf="@id/second_number"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/fourth_number"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toEndOf="@id/third_number"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fifth_number"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toEndOf="@id/fourth_number"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sixth_number"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:imeOptions="actionSend"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintStart_toEndOf="@id/fifth_number"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

